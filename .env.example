# ============================================
# Yaha Baat Karo - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER share this file or commit it to git!

# --- Firebase Configuration ---
# Get these from Firebase Console → Project Settings → Your apps → Web app
VITE_FIREBASE_API_KEY=your-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_DATABASE_URL=https://your-project-default-rtdb.firebaseio.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abc123

# --- LiveKit Configuration ---
# Your self-hosted LiveKit server URL (on Hostinger VPS)
VITE_LIVEKIT_URL=wss://livekit.yourdomain.com

# --- Token Server ---
# URL of the token server (runs on localhost during development)
VITE_TOKEN_SERVER_URL=http://localhost:3001
